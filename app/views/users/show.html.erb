<body>

<%= render 'layouts/header' %>

<div class="container" style="margin-top: 70px;">
	<div class="row">
		<div class="col-lg-3">
			<div class="col">
				<h2>User info</h2>
				<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format:'jpeg', class: "#", fallback: "no_image.jpg" %>
				<table class="table" style="font-weight: bold;">
					<tbody>
						<tr>
							<td>name</td>
							<td><%= @user.name %></td>
						</tr>
						<tr>
							<td>introduction</td>
							<td><%= @user.introduction %></td>
						</tr>
					</tbody>
				</table>
				<%= link_to '', edit_user_path, {class: "btn btn-default btn-block glyphicon glyphicon-wrench"} %>

			</div>

			<div class="col">
				<h2>New book</h2>
				<%= form_for(@book) do |f| %>
					<p><strong>Title</strong></p>
					<%= f.text_field :title %>
					<p><strong>Opinion</strong></p>
					<%= f.text_area :body %>
					<%= f.submit "Create Book", class: "btn btn-block btn-primary"%>
				<% end %>
			</div>
		</div>

		<div class="col-lg-9">
			<h2>Books</h2>
			<table class="table">
				<thead>
					<th colspan="1"></th> <th>Title</th> <th>Opinion</th>
				</thead>
				<tbody>
					<% @books.each do |book| %>
						<tr>
							<td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, format:'jpeg', class: "#", fallback: "no_image.jpg" %></td>
							<td><%= link_to book.title,book_path(book.id) %></td>
							<td><%= book.body %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>

	</div>

</div>


</body>